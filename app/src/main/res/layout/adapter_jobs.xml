<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_rectangle"
    android:backgroundTint="@color/backgroundSecondary">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fillTertiary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btn_barcode"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="7dp"
        android:src="@drawable/ic_bookmark"
        android:background="@drawable/btn_circle"
        android:backgroundTint="@color/backgroundSecondary"
        app:tint="@color/textSecondary"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/container_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/company_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/role_job"
        style="@style/TextExtraLarge_SemiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Role Job"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="52dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/container_img"
        app:layout_constraintTop_toTopOf="@+id/container_img" />

    <TextView
        android:id="@+id/company_name"
        style="@style/TextBase_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PT..."
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/container_img"
        app:layout_constraintTop_toBottomOf="@+id/role_job"/>

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/btn_circle"
        android:backgroundTint="@color/textSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/company_name"
        app:layout_constraintStart_toEndOf="@id/company_name"
        app:layout_constraintTop_toTopOf="@+id/company_name" />

    <TextView
        android:id="@+id/city"
        style="@style/TextBase_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/textSecondary"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/role_job"
        tools:text="Jakarta" />

    <TextView
        android:id="@+id/category"
        style="@style/TextExtraSmall_SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Full-Time"
        android:layout_marginStart="84dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/primary100"
        android:textColor="@color/primary500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_img"/>

    <TextView
        android:id="@+id/isBadBackground"
        style="@style/TextExtraSmall_SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Second-Chance"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="#1AEE0303"
        android:textColor="@color/negative_color"
        app:layout_constraintStart_toEndOf="@+id/category"
        app:layout_constraintTop_toBottomOf="@+id/container_img"/>

    <TextView
        android:id="@+id/isDisability"
        style="@style/TextExtraSmall_SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Disability"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/secondary100"
        android:textColor="@color/secondary600"
        app:layout_constraintStart_toEndOf="@+id/isBadBackground"
        app:layout_constraintTop_toBottomOf="@+id/container_img"/>

    <TextView
        android:id="@+id/salary"
        style="@style/TextBase_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp0"
        android:drawableStart="@drawable/ic_money"
        android:drawablePadding="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/container_img"
        app:layout_constraintTop_toBottomOf="@+id/category"/>

    <TextView
        android:id="@+id/created"
        style="@style/TextBase_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 detik yang lalu"
        android:textColor="@color/textTertiary"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category"/>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1A000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/salary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>